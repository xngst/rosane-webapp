# .env.example

# --- Application Environment ---
# Sets the environment for your application (e.g., "development", "production", "test")
ENV="test" # Recommended default for development

# --- Custom Application Settings ---
# These are application-specific configurations
CATEGORIES="A, B, C"
STATES="Új, Készülőben, Elkészült, stb"
ALLOWED_EXTENSIONS="jpg, jpeg, png"
MAX_SIZE_MB=2
RESIZE_MAX_DIM=1600

# --- Flask Configuration ---
